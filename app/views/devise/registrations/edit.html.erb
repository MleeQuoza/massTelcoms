<div id="fh5co-pricing-section" >
  <div class="container" >
    <div class="row">
      <div class="col-md-10 col-md-offset-1 text-center fh5co-heading animate-box">
        <h2 style = "font-size: 50px; color: #FFFFFF" >Personal Information </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-md-offset-1 text-center animate-box">
        <div class="pricing">
          <div class="col-md-12  animate-box">
            <div class="price-box" style="overflow-x:auto;">
              <h2 class="pricing-plan">Personal Information</h2>
              <table>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <tr>
                      <th class="pricing-plan">First Name</th>
                      <td><%= f.text_field :first_name, autofocus: true, class: 'form-control', required: 'required' %></td>
                    </tr>
                    <tr>
                      <th class="pricing-plan">Last Name</th>
                      <td><%= f.text_field :last_name, class: 'form-control', required: 'required' %></td>
                    </tr>

                    <tr>
                      <th class="pricing-plan">Mobile Phone</th>
                      <td><%= f.text_field :cellphone, class: 'form-control', required: 'required' %></td>
                    </tr>

                    <tr>
                      <% if current_user.present? && current_user.is?('admin') %>
                        <div class="form-group">
                          <% for role in User::ROLES %>
                              <div class="checkbox-inline">
                                <%= radio_button_tag "user[roles][#{role}]", role, @user.roles.include?(role), { name: 'user[roles][]' }%>
                                <%= label_tag "user_roles_#{role}", role.humanize %>
                              </div>
                          <% end %>
                          <%= hidden_field_tag 'user[roles][]', '' %>
                        </div>
                      <% end %>
                    </tr>

                    <tr>
                      <th class="pricing-plan">E-mail</th>
                      <td><%= f.email_field :email, class: 'form-control', required: 'required' %></td>
                    </tr>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>

                    <tr>
                      <th class="pricing-plan">New Password<br>
                        <i>(Only to change it)</i>
                      </th>
                      <td>
                        <%= f.password_field :password, class: 'form-control' %>
                        <% if @minimum_password_length %>
                            <br />
                            <em><%= @minimum_password_length %> characters minimum</em>
                        <% end %>
                      </td>
                    </tr>

                    <tr>
                      <th class="pricing-plan">Confirm Password</th>
                      <td><%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %></td>
                    </tr>

                    <tr>
                      <th class="pricing-plan">Current Password<br>
                        <i>(To confirm your changes)</i></th>
                      <td><%= f.password_field :current_password, autocomplete: 'off', class: 'form-control', required: 'required' %></td>
                    </tr>

                    <tr>
                      <th colspan="2">
                        <%= f.submit 'Update', class: 'btn btn-primary btn-outline' %>
                      </th>
                    </tr>
                <% end %>
              </table>
            </div>
            <div class="price-box" style="overflow-x:auto;">
              <h2>Cancel my account</h2>
              <p>Unhappy? <%= button_to 'Cancel my account', registration_path(resource_name), class: 'btn btn-primary btn-outline', data: { confirm: 'Are you sure?' }, method: :delete %></p>
              <%= link_to 'Back', :back %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
