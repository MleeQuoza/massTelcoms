<div class="modal fade" id="upload-"<%= modal_id %> role="dialog">
  <div id="fh5co-pricing-section" >
    <div class="container" >
      <div class="row">
        <div class="col-md-12 col-md-offset-3 text-center animate-box">
          <div class="pricing">
            <div class="col-md-8 animate-box">
              <div class="price-box">
                <h2 class="pricing-plan"><%= image_tag('deposit.png', :alt => 'Community Wealth SA 2017') %></h2>
                <%= form_tag(money_transaction_path(modal_id), remote: true, format: :json, multipart: true, method: :put) do %>
                    <h2> UPLOAD PROOF <sup class="currency"></sup></h2><br/>
                    <center>
                      <div class="price">
                        <%= hidden_field_tag(:id, modal_id) %>
                        <%= file_field_tag(:proof_of_payment, { class: 'btn btn-primary btn-outline', required: true }) %><sup class="currency"></sup>
                      </div>
                    </center>
                    <br/><br/>

                    <button type="button"
                            class="btn btn-primary btn-outline"
                            data-dismiss="modal" >Cancel</button>
                    <%= submit_tag 'Upload', class: 'btn btn-primary btn-outline', required: 'required', data: { toggle: 'modal', target: '#deposit' }%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
