<div id="fh5co-pricing-section" >
  <div class="container" >
    <div class="row">
      <div class="col-md-10 col-md-offset-2 text-center fh5co-heading animate-box">
        <h2 style = "font-size: 50px; color: #FFFFFF" > Active Investments </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-md-offset-1 text-center animate-box">
        <div class="pricing">
          <div class="col-md-12 animate-box">
            <div class="price-box" style="overflow-x:auto;">
              <h2 class="pricing-plan"> Active Donation </h2>
              <% if @donations.present? %>
                  <table>
                    <thead>
                    <th>Created Date</th>
                    <th>Expiry Date</th>
                    <th>Amount</th>
                    <th>Months Invested</th>
                    <th>Counter</th>
                    <th>Profit</th>
                    <th>Compound</th>
                    <th>Checkout</th>
                    </thead>
                    <tbody>
                    <% @donations.each do |donation| %>
                        <tr>
                          <td><%= donation.created_at.strftime('%d/%m/%Y') %></td>
                          <td><%= (donation.created_at + 6.months).strftime('%d/%m/%Y') %></td>
                          <td>R <%= donation.amount %></td>
                          <td><%= donation.months_invested %></td>
                          <td><%= number_with_precision(donation.profit_counter, significant: true) %></td>
                          <td><%= number_to_currency(donation.profit, unit: "R ", precision: 2) %></td>
                          <td><%= link_to 'Compound', dashboard_index_path  %></td>
                          <td><%= link_to 'Checkout', dashboard_index_path %></td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
              <% else %>
                <h3>You have no active donations</h3>
                  <p><%= link_to 'Donate', new_donation_path %> </p>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

