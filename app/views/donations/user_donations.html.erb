<div id="fh5co-pricing-section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-2 text-center fh5co-heading animate-box">
        <h2 style="font-size: 50px; color: #FFFFFF"> Active Investments </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-md-offset-1 text-center animate-box">
        <div class="pricing">
          <div class="col-md-12 animate-box">
            <div class="price-box" style="overflow-x:auto;">
              <h2 class="pricing-plan"> Active Donation </h2>
              <% if @donations.present? %>
                  <table>
                    <thead>
                    <th>Created Date</th>
                    <th>Expiry Date</th>
                    <th>Amount</th>
                    <th>Months<br>Invested</th>
                    <th>Counter</th>
                    <th>Profit</th>
                    <th>Compound</th>
                    <th>Checkout</th>
                    </thead>
                    <tbody>
                    <% @donations.each do |donation| %>
                      <tr>
                        <td><%= donation.created_at.strftime('%d/%m/%Y') %></td>
                        <td><%= (donation.maturity_date).strftime('%d/%m/%Y') %></td>
                        <td><%= number_to_currency(donation.amount, unit: 'R ', precision: 2) %></td>
                        <td><%= donation.months_invested %></td>
                        <td><%= number_with_precision(donation.profit_counter, precision: 0) %></td>
                        <td><%= number_to_currency(donation.profit, unit: 'R ', precision: 2) %></td>
                        <td>
                          <%= form_tag(donations_path) do %>
                            <%= hidden_field_tag(:user_id, current_user.id) %>
                            <%= hidden_field_tag(:amount, donation.profit) %>
                            <%= hidden_field_tag(:compounded, true) %>
                            <%= hidden_field_tag(:donation_id, donation.id) %>
                            <%= submit_tag 'Compound',
                                           class:    'btn btn-primary btn-outline',
                                           disabled: donation.profit < 1000 || donation.profit_counter < 7,
                                           data: { confirm: 'Are you sure?' }
                            %>
                          <% end %>
                        </td>
                        <td>
                          <%= form_tag(add_to_wallet_path) do %>
                            <%= hidden_field_tag(:user_id, current_user.id) %>
                            <%= hidden_field_tag(:amount, donation.profit) %>
                            <%= hidden_field_tag(:donation_id, donation.id) %>
                            <%= submit_tag 'Checkout',
                                           class:    'btn btn-primary btn-outline',
                                           disabled: donation.profit_counter < 7,
                                           data: { confirm: 'Are you sure?' }%>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
              <% else %>
                  <h3>You have no active donations</h3>
                  <button type="submit" name="submit" class="btn btn-primary btn-outline"
                          style="" required="required" data-toggle="modal" data-target="#Deposit">Donate
                  </button>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

