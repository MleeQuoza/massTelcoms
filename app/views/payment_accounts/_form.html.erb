<%= form_for(@account) do |f| %>
    <div class="form-group">
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <p><%= f.label :account_holder_name %></p>
      <p><%= f.text_field :account_holder_name, auto_focus: true %></p>
    </div>

    <div class="form-group">
      <p><%= f.label :bank_name %></p>
      <p><%= f.text_field :bank_name %></p>
    </div>

    <div class="form-group">
      <p><%= f.label :branch_code %></p>
      <p><%= f.text_field :branch_code %></p>
    </div>

    <div class="form-group">
      <p><%= f.label :account_number %></p>
      <p><%= f.text_field :account_number %></p>
    </div>

    <%= f.submit %>
<% end %>