<div id="fh5co-pricing-section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 text-center fh5co-heading animate-box">
        <h2 style="font-size: 50px; color: #FFFFFF"> Withdrawal History </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 col-md-offset-0 text-center animate-box">
        <div class="pricing">
          <div class="col-md-12 animate-box">
            <div class="price-box" style="overflow-x:auto;">
              <h2 class="pricing-plan"> Active withdrawal </h2>
              <% if @withdrawals.present? %>
                  <table>
                    <thead>
                    <th>Created Date</th>
                    <th>Amount</th>
                    <th>Balance</th>
                    <th>Status</th>
                    </thead>
                    <tbody>
                    <% @withdrawals.each do |withdrawal| %>
                        <tr>
                          <td><%= withdrawal.created_at.strftime('%d/%m/%Y') %></td>
                          <td><%= display_as_money(withdrawal.amount) %></td>
                          <td><%= display_as_money(withdrawal.balance) %></td>
                          <td><%= withdrawal.status %></td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
              <% else %>
                  <h3>You have no active withdrawals</h3>
                  <h4>Wallet Balance: <%= display_as_money(current_user.wallet.amount) %></h4>
                  <%= link_to 'Withdraw', withdraw_from_wallet_path, class: 'btn btn-primary btn-outline', via: :post %>
              <% end %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="fh5co-counters" style="background-image: url(<%= image_path('2.jpg') %>);" data-stellar-background-ratio="0.5" id="counter-animate">
      <div class="fh5co-narrow-content animate-box">
        <div class="row" >
          <div class="col-md-10">
              <div class="fh5co-feature animate-box" data-animate-effect="fadeInLeft">
                  <div class="fh5co-icon">
                    <i class="icon-info"></i>
                  </div>
                <div class="fh5co-text">
                   <h2 style = "color: #da1212"> WITHDRAWAL HISTORY </h2><br/>
                    <p style = "color: #fff"> All withdrawals are being kept on record per user. This page will display the history of withdrawals. The current balance will also be displayed as Wallet Balance. </p>
                </div>
              </div> 
          </div>
        </div>
      </div>
  </div>
